@model IEnumerable<DACT.Models.CartItem>

<div class="harmic-offcanvas-body">
    <div class="minicart-content">
        <div class="minicart-heading">
            <h4 class="mb-0">Shopping Cart</h4>
            <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
        </div>
        @foreach (var item in Model)
        {
            <ul class="minicart-list">
                <li class="minicart-product">
                    <a class="product-item_remove" href="#">
                        <i class="pe-7s-close"></i>
                    </a>
                    <a href="shop.html" class="product-item_img">
                        <img class="img-full" src="@item.AnhMon" alt="Product Image">
                    </a>
                    <div class="product-item_content">
                        <a class="product-item_title" href="shop.html">@item.tenMon</a>
                        <span class="product-item_quantity">@item.SoLuong x @item.Gia.ToString("#,##0") VNĐ</span>
                    </div>
                </li>
            </ul>
        }
    </div>

    <div class="minicart-item_total">
        <span>Subtotal</span>
        <span class="ammount">@String.Format("{0:0,0}", ViewBag.TongTien) VNĐ</span>
    </div>
    <div class="group-btn_wrap d-grid gap-2">
        <a href="@Url.Action("Index", "ShoppingCart")" class="btn btn-secondary btn-primary-hover">Giỏ hàng</a>
        <a href="@Url.Action("Confirm", "ShoppingCart")" class="btn btn-secondary btn-primary-hover">Đặt hàng</a>
    </div>
</div>
